@model ProfileViewModel

<section>
    <div class="flex h-screen bg-gray-50">
        <!-- Sidebar -->
        <div class="sidebar w-64 bg-gray-800 text-white shadow-lg flex flex-col">
            <!-- Sidebar content -->
            <nav class="flex-1 overflow-y-auto px-4 py-6">
                <!-- Links -->
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="LecturerDashboard" asp-action="Profile">
                    <i data-lucide="user" class="h-5 w-5 mr-3"></i>Profile
                </a>
                <!-- Add more links -->
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-y-auto">
            <header class="bg-white shadow-sm">
                <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                    <h1 id="page-title" class="text-2xl font-semibold text-gray-900">@ViewData["Title"]</h1>
                </div>
            </header>
            <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                <div id="content-area" class="content-area">
                    <h1 class="text-3xl font-bold mb-6">Profile</h1>

                    <form asp-action="Profile" method="post" class="bg-white shadow-lg rounded-lg p-6">
                        <div class="mb-6">
                            <label for="firstName" class="block text-gray-700">First Name</label>
                            <input id="firstName" name="FirstName" type="text" class="border p-2 w-full" value="@Model.FirstName">
                        </div>

                        <div class="mb-6">
                            <label for="lastName" class="block text-gray-700">Last Name</label>
                            <input id="lastName" name="LastName" type="text" class="border p-2 w-full" value="@Model.LastName">
                        </div>

                        <div class="mb-6">
                            <label for="email" class="block text-gray-700">Email</label>
                            <input id="email" name="Email" type="email" class="border p-2 w-full" value="@Model.Email">
                        </div>

                        <div class="mb-6">
                            <label for="password" class="block text-gray-700">New Password (Optional)</label>
                            <input id="password" name="Password" type="password" class="border p-2 w-full">
                        </div>

                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Update Profile</button>
                    </form>
                </div>
            </main>
        </div>
    </div>
</section>
