    @{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<section class="login-container">
    <div class="header">
        <div class="header-content">
            <h1 class="title">Login to</h1>
            <h2 class="subtitle">Contract Monthly Claim System</h2>
            <p class="register-prompt">If you don’t have an account <a asp-controller="Account" asp-action="Register" class="register-link">You can Register here!</a></p>
        </div>
    </div>
    <div class="form-container">
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="Email" class="form-input" required>

            </div>
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="Password" class="form-input" required>
            </div>
            <p class="forgot-password"><a href="forgot-password.html">Forgot password?</a></p>
            <p class="continue-with">or continue with</p>
            <div class="social-login">
                <!-- Add any social login buttons here -->
            </div>
            <button type="submit" class="login-button">Sign In</button>
        </form>
    </div>
</section>
