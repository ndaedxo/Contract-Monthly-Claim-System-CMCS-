
@{
    ViewData["Title"] = "Programme Coordinator Dashboard: ClaimsManagement";
}

@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<section>
    <div class="flex h-screen bg-gray-50">
        <!-- Sidebar -->
        <div class="sidebar w-64 bg-gray-800 text-white shadow-lg flex flex-col">
            <div class="sidebar-header p-6 border-b border-gray-700 flex items-center">
                <img src="logo.png" alt="Logo" class="h-10 w-10 mr-2">
                <h1 class="text-2xl font-bold">CMCS</h1>
            </div>
            <nav class="flex-1 overflow-y-auto px-4 py-6">
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="Index">
                    <i data-lucide="home" class="h-5 w-5 mr-3"></i> Dashboard Home
                </a>
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="ClaimsManagement">
                    <i data-lucide="file-text" class="h-5 w-5 mr-3"></i> ClaimsManagement
                </a>
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="LecturerDirectory">
                    <i data-lucide="upload" class="h-5 w-5 mr-3"></i> LecturerDirectory
                </a>
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="ReportsAndAnalytics">
                    <i data-lucide="activity" class="h-5 w-5 mr-3"></i> ReportsAndAnalytics
                </a>



                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="Profile">
                    <i data-lucide="activity" class="h-5 w-5 mr-3"></i>Profile
                </a>
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="Settings">
                    <i data-lucide="user" class="h-5 w-5 mr-3"></i> Settings
                </a>
            </nav>
            <div class="sidebar-footer p-6 border-t border-gray-700">
                <a class="sidebar-item sidebar-link p-6 border-b border-gray-700" asp-area="" asp-controller="Account" asp-action="Logout">
                    <i data-lucide="log-out" class="h-5 w-5 mr-3"></i> Logout
                </a>
            </div>
        </div>


        <!-- Main Content -->
        <div class="flex-1 overflow-y-auto">
            <header class="bg-white shadow-sm">
                <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                    <h1 id="page-title" class="text-2xl font-semibold text-gray-900">@ViewData["Title"]</h1>
                </div>
            </header>
            <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                <div id="content-area" class="content-area">
                    <h1 class="text-3xl font-bold mb-6">Claims Management</h1>

                    <!-- Filter and Search -->
                    <div class="flex justify-between mb-6">
                        <input type="text" placeholder="Search Claims" class="border p-2 rounded">
                        <div>
                            <button class="bg-blue-600 text-white px-4 py-2 rounded">Approve All</button>
                            <button class="bg-red-600 text-white px-4 py-2 rounded">Reject All</button>
                        </div>
                    </div>

                    <!-- Claims Table -->
                    <table class="min-w-full bg-white shadow-lg rounded-lg">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="p-4 text-left">Claim ID</th>
                                <th class="p-4 text-left">Lecturer</th>
                                <th class="p-4 text-left">Hours</th>
                                <th class="p-4 text-left">Total Amount</th>
                                <th class="p-4 text-left">Status</th>
                                <th class="p-4 text-left">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="p-4">1234</td>
                                <td class="p-4">John Doe</td>
                                <td class="p-4">35</td>
                                <td class="p-4">$3,500</td>
                                <td class="p-4">Pending</td>
                                <td class="p-4">
                                    <a href="/AcademicManager/ClaimDetails/1234" class="text-blue-600">View</a>
                                </td>
                            </tr>
                            <!-- More rows... -->
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

</section>
